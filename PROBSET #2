#include <iostream>
using namespace std;

int main() {
    float length, width;

    // Get user input
    cout << "Enter the length of the box: ";
    cin >> length;
    cout << "Enter the width of the box: ";
    cin >> width;

    // Calculate area
    float area = length * width;

    // Display the area
    cout << "The area of the box is: " << area << endl;

    // Print box using for loop
    cout << "Visual representation of the box:" << endl;

    for (int i = 0; i < static_cast<int>(length); i++) {
        for (int j = 0; j < static_cast<int>(width); j++) {
            cout << "* ";
        }
        cout << endl;
    }

    return 0;
}